<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="open_sans_font">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>


    <style name="edit_profile_btn" parent="open_sans_font">
        <item name="android:text">@string/edit_profile</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/fragment_my_profile_button_edit_profile</item>
        <item name="android:textSize">@dimen/fragment_my_profile_button_text_size</item>
    </style>

    <style name="TextColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_input_layout_hint</item>
        <item name="colorControlActivated">@color/contact_item_name_color</item>
    </style>

    <style name="TextColorAuthFragment" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_input_layout_hint</item>
        <item name="colorControlActivated">@color/label_text_color</item>
    </style>

    <style name="TextInputLayout">
        <item name="theme">@style/TextColor</item>
        <item name="android:textColorHint">@color/text_input_layout_hint</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="TextInputLayoutPassword" parent="TextInputLayout">
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">16</item>
        <item name="counterTextColor">@color/label_secondary_text_color</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/label_secondary_text_color</item>
    </style>

</resources>